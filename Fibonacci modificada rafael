def fibonacci_modificada(n, bases=None):
    """
    Gera uma sequência Fibonacci modificada até o n-ésimo termo,
    podendo incluir múltiplas bases para variações fractais.

    :param n: Número de termos da sequência
    :param bases: Lista de bases para modulação (ex: [1,2,4,5,...])
    :return: Lista com a sequência gerada
    """
    if bases is None:
        bases = [1, 2, 3]  # Base padrão

    seq = [0, 1]
    for i in range(2, n):
        # Soma dos dois anteriores com modulação pelas bases em loop fractal
        base = bases[(i-2) % len(bases)]
        next_val = seq[i-1] + seq[i-2] + base
        seq.append(next_val)

    return seq

# Exemplo de uso
bases_customizadas = [1, 2, 4, 5, 7, 8, 9, 10, 15, 20, 21, 42]
sequencia = fibonacci_modificada(20, bases_customizadas)
print(sequencia)
