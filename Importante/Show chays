import numpy as np

# ğŸŒ€ Escolhe qual quer ver:
# filename = 'outputs/fractal_normalizado.npy'
filename = 'outputs/fractal_quÃ¢ntico.npy'

Z = np.load(filename)
print(f"âœ”ï¸ Shape: {Z.shape}")
print(f"ğŸ“Š Min: {np.nanmin(Z)}, Max: {np.nanmax(Z)}")

# âš™ï¸ Normaliza para 0â€“1
Z_norm = (Z - np.nanmin(Z)) / (np.nanmax(Z) - np.nanmin(Z))

# ğŸ¨ ASCII palette do claro ao escuro
palette = np.array(list(" .:-=+*#%@"))

# Converte valores normalizados para Ã­ndices de caractere
indices = (Z_norm * (len(palette)-1)).astype(int)

# ğŸ”  Desenha no terminal
for row in indices:
    print("".join(palette[row]))
