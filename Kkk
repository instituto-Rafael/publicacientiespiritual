#!/data/data/com.termux/files/usr/bin/bash

# ğŸŒ€ RafaelIA :: LATENCIA GUARDIAN
# âœ¨ Otimiza processamento, limpa buffer, captura logs, e prepara sistema p/ envio simbiÃ³tico

echo "[ğŸ”§] Inicializando LatÃªncia Guardian..."
sleep 0.5

# ğŸ§½ Limpa caches menores do Android
echo "[ğŸ§¼] Limpando cache leve..."
pm clear com.google.android.inputmethod.latin >/dev/null 2>&1

# ğŸ§  Otimiza prioridades de I/O e processamento
echo "[âš™ï¸] Ajustando prioridades para Gboard..."
renice -n -10 $(pidof com.google.android.inputmethod.latin) 2>/dev/null

