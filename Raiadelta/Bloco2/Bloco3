#include <math.h>
#include <string.h>

double calc_entropy(const char *str) {
    int count[256] = {0};
    size_t len = strlen(str);
    for (size_t i = 0; i < len; ++i) count[(unsigned char)str[i]]++;

    double entropy = 0.0;
    for (int i = 0; i < 256; ++i) {
        if (count[i]) {
            double p = (double)count[i] / len;
            entropy -= p * log2(p);
        }
    }
    return entropy;
}

