# FunÃ§Ã£o para integrar GPT opcional (simples)
integrar_gpt() {
    local estado
    if [ -f "$BASE/.gpt_enabled" ]; then
        estado=$(cat "$BASE/.gpt_enabled")
    else
        estado="false"
    fi
    echo "â™¾ï¸ GPT atualmente: $estado"
    read -rp "Deseja ativar/desativar GPT? (s/n): " escolha
